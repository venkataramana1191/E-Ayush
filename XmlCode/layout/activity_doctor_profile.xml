<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".DoctorProfile">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/ProfileImage"
            android:layout_width="97dp"
            android:layout_height="87dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/login_profile"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="27dp" />

        <TextView
            android:id="@+id/DName"
            android:layout_width="276dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="Name"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/Black"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="27dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/Dvillage"
        android:layout_width="281dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="130dp"
        android:paddingTop="10dp"
        android:text="Dvillage"
        android:textColor="@color/Black"
        android:textSize="19dp" />

    <Button
        android:id="@+id/DBvillage"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/White"
        android:layout_alignTop="@+id/Dvillage"
        android:onClick="EditVillage"
        android:layout_marginEnd="14dp"
        android:text="Edit"
        tools:ignore="OnClick" />

    <TextView
        android:id="@+id/DMandal"
        android:layout_width="281dp"
        android:layout_height="49dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Dvillage"
        android:layout_marginTop="199dp"
        android:paddingTop="10dp"
        android:text="DMandal"
        android:textColor="@color/Black"
        android:textSize="19dp" />

    <Button
        android:id="@+id/DBMandal"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/DBvillage"
        android:layout_alignTop="@+id/DMandal"
        android:background="@color/colorPrimary"
        android:onClick="EditMandal"
        android:text="Edit"
        android:textColor="@color/White" />

    <TextView
        android:id="@+id/DDistrict"
        android:layout_width="281dp"
        android:layout_height="49dp"
        android:layout_alignStart="@+id/Dvillage"
        android:layout_centerVertical="true"
        android:paddingTop="10dp"
        android:text="DDistrict"
        android:textColor="@color/Black"
        android:textSize="19dp" />

    <Button
        android:id="@+id/DBDistrict"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/DBvillage"
        android:layout_alignTop="@+id/DDistrict"
        android:background="@color/colorPrimary"
        android:onClick="EditDistrict"
        android:text="Edit"
        android:textColor="@color/White" />

    <TextView
        android:id="@+id/DState"
        android:layout_width="281dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/Dvillage"
        android:layout_marginBottom="194dp"
        android:paddingTop="10dp"
        android:text="DState"
        android:textColor="@color/Black"
        android:textSize="19dp" />

    <Button
        android:id="@+id/DBstate"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/DBvillage"
        android:layout_alignTop="@+id/DState"
        android:background="@color/colorPrimary"
        android:onClick="EditState"
        android:text="Edit"
        android:textColor="@color/White" />

    <TextView
        android:id="@+id/DEmail"
        android:layout_width="281dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/Dvillage"
        android:layout_marginBottom="127dp"
        android:paddingTop="10dp"
        android:text="DEmail"
        android:textColor="@color/Black"
        android:textSize="19dp" />

    <Button
        android:id="@+id/DBEmail"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/DBvillage"
        android:layout_alignTop="@+id/DEmail"
        android:background="@color/colorPrimary"
        android:onClick="EditEmail"
        android:text="Edit"
        android:textColor="@color/White" />

    <TextView
        android:id="@+id/DMobile"
        android:layout_width="353dp"
        android:layout_height="51dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="Mobile No"
        android:textColor="@color/Black"
        android:textSize="20dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/White"
        android:onClick="SaveData"
        android:text="Save" />

    <EditText
        android:id="@+id/EditTextVillage"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Dvillage"
        android:layout_alignTop="@+id/Dvillage"
        android:ems="10"
        android:hint="Vilage Name"
        android:inputType="textPersonName"
        android:textColor="@color/Black"
        android:visibility="visible" />

    <Button
        android:id="@+id/EditVillage"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/DBvillage"
        android:layout_alignTop="@+id/Dvillage"
        android:background="@color/colorPrimary"
        android:onClick="EditVillage1"
        android:text="OK"
        android:textColor="@color/White" />

    <EditText
        android:id="@+id/EditTextMandal"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Dvillage"
        android:layout_alignTop="@+id/DMandal"
        android:ems="10"
        android:hint="Mandal Name"
        android:inputType="textPersonName"
        android:textColor="@color/Black" />

    <Button
        android:id="@+id/EditMandal"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/DBvillage"
        android:layout_alignTop="@+id/DMandal"
        android:onClick="EditMandal1"
        android:background="@color/colorPrimary"
        android:text="OK"
        android:textColor="@color/White" />

    <EditText
        android:id="@+id/EditTextDistrict"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Dvillage"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="District Name"
        android:inputType="textPersonName"
        android:textColor="@color/Black" />

    <Button
        android:id="@+id/EditDistrict"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:onClick="EditDistrict1"
        android:layout_alignStart="@+id/DBvillage"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimary"
        android:text="OK"
        android:textColor="@color/White" />

    <EditText
        android:id="@+id/EditTextState"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Dvillage"
        android:layout_alignTop="@+id/DState"
        android:ems="10"
        android:hint="Vilage Name"
        android:inputType="textPersonName"
        android:textColor="@color/Black" />

    <Button
        android:id="@+id/EditState"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/DBvillage"
        android:layout_alignTop="@+id/DState"
        android:background="@color/colorPrimary"
        android:onClick="EditState1"
        android:text="OK"
        android:textColor="@color/White" />

    <EditText
        android:id="@+id/EditTextEmail"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/DEmail"
        android:layout_alignEnd="@+id/Dvillage"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textPersonName"
        android:textColor="@color/Black" />

    <Button
        android:id="@+id/EditEmail"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/DBvillage"
        android:layout_alignTop="@+id/DEmail"
        android:background="@color/colorPrimary"
        android:onClick="EditEmail1"
        android:text="OK"
        android:textColor="@color/White" />

</RelativeLayout>